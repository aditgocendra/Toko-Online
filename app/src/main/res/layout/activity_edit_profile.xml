<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar_back"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@mipmap/user1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    app:civ_circle_background_color="@color/primaryTextColor"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/primaryTextColor"
                    android:elevation="5dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:paddingLeft="130dp"
                    android:src="@drawable/ic_camera_edit"
                    app:civ_circle_background_color="@color/primaryTextColor"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/primaryTextColor"
                    android:elevation="6dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Nama Anda"
                    android:layout_gravity="center_horizontal"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nama_anda_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="No Telp"
                    android:layout_gravity="center_horizontal"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/no_telp_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textColor="@color/primaryTextColor"
                    android:background="@drawable/bg_btn"
                    android:layout_gravity="center_horizontal"
                    android:onClick="btn_simpan_perubahan"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>