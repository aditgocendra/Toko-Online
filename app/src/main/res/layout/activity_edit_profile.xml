<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:SpinKit_Color="@color/primaryDarkColor"
                android:elevation="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar_back"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo_user_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/user1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    app:civ_circle_background_color="@color/primaryTextColor"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/primaryTextColor"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="90dp"
                    android:paddingLeft="120dp"
                    android:src="@drawable/ic_camera_edit"
                    app:civ_circle_background_color="@color/primaryTextColor"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/primaryTextColor"
                    android:elevation="1dp"
                    android:onClick="edit_photo_user"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1">

                        <TextView
                            android:id="@+id/userDisplayName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/ic_account_circle"
                            android:drawablePadding="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Username"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9">

                    <ImageView
                        android:onClick="edit_name_profile"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_edit"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="0.5dp"
                    android:background="#9B9797"/>


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>